    "moment": "^2.29.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.6",
    "prettier": "^2.2.1",
    "react": "^16.14.0",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^16.14.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "react-select": "^2.4.3",
    "rollup": "^2.39.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.0",
